<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/walli"
    android:layout_height="match_parent"
    tools:context="com.example.ainesh.navigation.LoginActivity">


    <EditText
        android:id="@+id/UsernametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordtextView"
        android:layout_alignStart="@+id/passwordtextView"
        android:layout_below="@+id/signinView"
        android:layout_marginTop="77dp"
        android:background="@drawable/roundedcorners"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint=" username"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#9e9e9e"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UsernametextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:ems="10"
        android:textColorHint="#9e9e9e"
        android:textColor="#FFFFFF"
        android:background="@drawable/roundedcorners"
        android:inputType="textPersonName"
        android:hint=" password"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/signinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="@string/sign_in"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

</RelativeLayout>
